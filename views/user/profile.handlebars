<div class="container profile-page">
    {{> _not_authmsg}}
    <h1 class="profile-page-heading">Welcome {{user.name}}</h1>
    <div class="user-profile">
        <img class="img-thumbnail" src="{{user.image}}" alt="Profile Pic">
        <div class="user-info">
            <h1>Name : {{user.name}}</h1>
            <p>Email : {{user.email}}</p>
        </div>
    </div>
    <hr>
    <div class="user-stories">
        <h1 style="font-family:Raleway;">Your Stories :</h1>
        {{#each stories}}
        <div class="card user-stories-box" style="width: 18rem;">
            <div class="card-body">
                <h1 style="font-size:2rem;"> {{title}} </h1>
                <p class="lead" style="text-transform: uppercase;"> <b>Status : </b> {{status}}</p>
                <p class="lead" style="text-transform: uppercase;"> <b>Published Date : </b> {{DateFormat date "MMMM do YYYY"}}</p>
                <hr>
                <p style="font-size:1.4rem;" class="card-text"> {{ DesLength (RemoveHtml body) }} </p>
                <a style="margin:4px;" class="btn btn-dark" href="/story/edit/{{id}}"> Edit</a>
                <a style="margin:4px;" class="btn btn-danger" href="/story/delete/{{id}}"> Delete </a>
                <a class="btn btn-primary" href="/story/show/{{id}}"> Read More </a>
            </div>
        </div>
        {{else}}
        <p style="font-family:Raleway;" class="display-2">No Stories</p>
        {{/each}}
    </div>

</div>